<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CL07_Activity_Animacion" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>


        <!-- Permitir las transiciones entre activitys -->
        <item name="android:windowActivityTransitions">true</item>
        <!--Definición de efectos de transición de entrada y salida-->
        <item name="android:windowSharedElementEnterTransition">@android:transition/explode</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/explode</item>
        <item name="android:duration">2500</item>
    </style>
</resources>